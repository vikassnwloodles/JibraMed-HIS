<form>
    <label name="request"/>
    <group colspan="1" id="request_and_request_line">
      <field name="request"/>
      <field name="request_line"/>
    </group>
    <label name="date"/>
    <group colspan="1" id="date_and_urgent">
      <field name="date"/>
      <label name="urgent"/>
      <field name="urgent"/>
    </group>
    <label name="patient"/>
    <field name="patient"/>
    <label name="requested_test"/>
    <field name="requested_test"/>
    <label name="doctor"/>
    <field name="doctor"/>
    <label name="context"/>
    <field name="context"/>
    <newline/>
    <label name="state"/>
    <field name="state"/>
    <group colspan="2" id="imaging_request_buttons">
        <button name="requested" string="Request" icon="tryton-go-next"/>
        <button name="generate_results" colspan="2" string="Generate Results" icon="tryton-go-next"/>
    </group>
    <newline/>
    <label name="comment" xalign="0.0" colspan="4"/>
    <newline/>
    <field name="comment" colspan="4"/>
</form>
